{
    "schemes": [
        "http",
        "https"
    ],
    "swagger": "2.0",
    "info": {
        "description": "This is an API for PeacefulParenting.ai",
        "title": "PeacefulParenting API",
        "contact": {
            "name": "Matt Rybin",
            "email": "contact@mattrybin.com"
        },
        "version": "1.0"
    },
    "basePath": "/api/v1",
    "paths": {
        "/questions": {
            "get": {
                "description": "Get a list of questions with optional sorting, range and filtering parameters.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Questions"
                ],
                "summary": "Get a list of questions",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Sort key and order ['key','order'] (default is ['id','DESC'])",
                        "name": "sort",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "Range for pagination [start, end] (default is [75, 99])",
                        "name": "range",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "Filtering by category field {'category':'value'} (default is {})",
                        "name": "filter",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/types.Question"
                            }
                        },
                        "headers": {
                            "X-Total-Count": {
                                "type": "string",
                                "description": "Total count of questions"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "types.Question": {
            "type": "object",
            "properties": {
                "answerCount": {
                    "type": "integer"
                },
                "category": {
                    "type": "string",
                    "enum": [
                        "child",
                        "toddler",
                        "preteen",
                        "infant",
                        "teen",
                        "adult",
                        "household",
                        "relatives",
                        "other"
                    ]
                },
                "createdAt": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "viewCount": {
                    "type": "integer"
                },
                "voteCount": {
                    "type": "integer"
                }
            }
        }
    }
}